<!DOCTYPE html>
<html lang="en">
  <%- include("../partials/head.ejs")%>
  <link rel="stylesheet" href="/css/crearproducto.css">
  <link rel="stylesheet" href="/css/editarproducto.css">
  <body>
    <%- include("../partials/header.ejs")%>
    <main>
        <form 
          action="/producto/<%=producto.id%>/editar?_method=PUT"
          method="POST"
          class="form2"
          enctype="multipart/form-data"
          id="edit-product">
          <div>
            <h4>Como se veria tu Producto:</h4>
          </div>
          <section class="edit-product-description">
            <div class="submit-main-product-detail">
              <div class="img-edit-product">
                <div class="contain-edit-img">
                  <div class="submit-edit-imagen">
                    <img src="/img/products/<%= producto.image%>" alt="<%=producto.alt %>" />
                  </div>
                  <input type="file" name="image" id="image" placeholder="Subir Imagen" value="<%=producto.image%>"/>
                </div>
              </div>

              <div class="submit-botton-product-img">
                <div class="submit-product-title-rigth">
                  <small></small>
                  <label for="name"></label>
                  <input type="text" class="name" name="name" id="name" placeholder="Nombre del producto" value="<%=producto.name%>"/>
                </div>

                <div class="submit-product-discount-rigth">
                  <small></small>
                  <label for="discount"></label>
                  <input type="number" class="discount" name="discount" id="discount"  placeholder="Descuento" value="<%=producto.discount%>" />
                </div>

                <div class="submit-product-stock">
                  <small></small>
                  <label for="cantidad"></label>
                  <input type="number" class="stock" name="stock" id="stock" placeholder="cantidad de productos" value="<%=producto.stock%>">
                </div>
                <div class="submit-product-price">
                  <small></small>
                  <label for="price"></label>
                  <input type="number" class="price" name="price" id="price" placeholder="Precio" value="<%=producto.price%>">
                </div>
              </div>
            </div>
            <div class="submit-product-carac">
              <p>CARACTERISTICAS:</p>
              <small></small>
              <label for="description"></label>
              <input class="description" name="description" id="description" placeholder="Descripcion" value="<%=producto.description%>"></input>
            </div>


            <div class="submit-color">
              <p>COLORES DISPONIBLES:</p>
              <small></small>
              <input type="text" name="colores" id="colores" placeholder="colores" value="<%=producto.color%>"/>
            </div>

            <div class="submit-sub-categorias">
              <p>CATEGORIA DEL PRODUCTO: <%=producto.categorias.name%></p>
              <label for="categorias">
                  
                <select name="categorias" id="categorias">
                  
                  <% for (let i = 0; i < categorias.length; i++) {%>
                    <% if(producto.categorias.id == categorias[i].id){%>
                      <option value="categorias[i].id" selected><%= categorias[i].name %></option>
                    <%}%>
                    <% if(producto.categorias.id !== categorias[i].id){%>
                      <option value="categorias[i].id" ><%= categorias[i].name %></option>
                    <%}%>
                  <%}%>
                </select>   

              </label>   

            
            <div class="submit-product">
              <button type="submit" class="button-submit-product">
                EDITAR PRODUCTO
              </button>  
            </div>
          </section>
        </form>
