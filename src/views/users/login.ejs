<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head.ejs")%>
  <link rel="stylesheet" href="/css/register.css">

  <body>

    <%- include("../partials/header.ejs")%>

      <main class="register_main">
         <div class="color_orange">
         </div>
       <section class="section_register">
          <form class="register_form" action="/login" method="POST" id="log-form">
            <h2> Iniciar Sesión</h2>
            <div class="register_control">
              <label for="login-name"></label>
              <small></small>
              <input
                type="email"
                name="email"
                id="login-name"
                placeholder="Email"
              />
            </div>

            <div class="register_control">
              <label for="login-password"></label>
              <small class="passwordSmall"></small>
              <input
                type="password"
                name="password"
                id="password"
                placeholder="Contraseña"
              />
            </div>

              <div>
                  <label for="checkbox-recuerdame">Recuerdame</label>
                  <input type="checkbox" name="remember" id="checkbox">
              </div>

              <div class="register_button_submit">
                <button type="submit" class="register_submit_button">
                  Iniciar Sesión
                </button>
              </div>

            </div>
          </form>
        </section>
      </main>

      <%- include("../partials/footer.ejs")%>

    <script src="/js/login.js"></script>
  </body>

</html>